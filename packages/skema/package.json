{
  "name": "skema",
  "version": "9.0.3",
  "description": "JavaScript Data Checker and Purifier.",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "files": [
    "lib",
    "dist",
    "umd"
  ],
  "scripts": {
    "build:es": "BABEL_ENV=rollup ../../node_modules/.bin/babel src --out-dir lib",
    "build:cjs": "../../node_modules/.bin/rollup -c ../../rollup/rollup.js",
    "build:umd": "../../node_modules/.bin/rollup -c ../../rollup/rollup.umd.js",
    "build:min": "../../node_modules/.bin/rollup -c ../../rollup/rollup.umd-min.js",
    "build": "npm run build:es && npm run build:cjs && npm run build:umd && npm run build:min",
    "test": "BABEL_ENV=ava ../../node_modules/.bin/nyc ../../node_modules/.bin/ava --verbose --timeout=10s test/*.js",
    "test-no-cov": "BABEL_ENV=ava ../../node_modules/.bin/ava --verbose --timeout=10s test/*.js",
    "prepublish": "npm run build",
    "report-cov": "../../node_modules/.bin/nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kaelzhang/skema.git"
  },
  "keywords": [
    "skema",
    "schema",
    "validators",
    "default",
    "setters",
    "check",
    "validate",
    "type",
    "orm",
    "object",
    "struct",
    "throw",
    "types",
    "validation",
    "validator",
    "typescript",
    "joi",
    "vue"
  ],
  "engines": {
    "node": ">=4"
  },
  "author": "kaelzhang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kaelzhang/skema/issues"
  },
  "ava": {
    "require": "babel-register",
    "babel": {
      "babelrc": true
    }
  },
  "dependencies": {
    "@skema/basic": "^1.0.9",
    "err-object": "^3.0.1",
    "make-array": "^1.0.3",
    "promise-faker": "^1.2.4",
    "promise.extra": "^2.1.25"
  }
}
