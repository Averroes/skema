{
  "name": "skema",
  "version": "8.0.0",
  "description": "Skema provides a handy and composable way to validate and transform JavaScript objects.",
  "main": "index.js",
  "scripts": {
    "build": "../../node_modules/.bin/babel src --out-dir lib",
    "test": "../../node_modules/.bin/nyc ../../node_modules/.bin/ava --verbose --timeout=10s",
    "test-no-cov": "../../node_modules/.bin/ava --verbose --timeout=10s",
    "prepublish": "npm run build",
    "report-cov": "../../node_modules/.bin/nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kaelzhang/node-skema.git"
  },
  "keywords": [
    "skema",
    "schema",
    "validators",
    "default",
    "setters",
    "check",
    "validate"
  ],
  "engines": {
    "node": ">=4"
  },
  "author": "kaelzhang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kaelzhang/node-skema/issues"
  },
  "ava": {
    "require": "babel-register",
    "babel": {
      "babelrc": true
    }
  },
  "dependencies": {
    "err-object": "^2.0.3",
    "make-array": "^1.0.1",
    "promise-faker": "^1.2.0",
    "promise.extra": "^2.1.0",
    "symbol-for": "^1.0.0"
  }
}
